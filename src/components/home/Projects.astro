---
import '../../styles/projects.css';
const {projects} = Astro.props;
---
<section class="section">
    <div class="container projects">
        <div class="row">
            <div class="col col-12 projects__title">
                <h1 class=" display-4">Proyectos</h1>
            </div>
            { projects.map(project => {
                return (
                    <div class="col col-12 col-md-6 col-lg-4 projects__card">
                        <img src="/images/projects/project1.jpg" alt="Project image">
                        <div class="projects__card__info border">
                            <h2 class="display-8" title={project.name}>{project.name}</h2>
                            <span class="projects__card__line"></span>
                            <div class="projects__card__text">
                                <p>{project.description}</p>
                            </div>
                            <div class="projects__card__button">
                                <a class="button-outline" href={"/project/"+project.id}>Ver m√°s</a>
                            </div>
                        </div>
                    </div>
                );
            }) }
        </div>
    </div>
</section>