---
import '../../styles/aboutme.css';
const {tecnologies, info} = Astro.props;
---
<section class="section">
    <article class="container aboutme">
        <div class="row justify-content-center">
            <div class="col col-12 projects__title">
                <h1 class="display-4">{info.title}</h1>
            </div>
            <div class="col col-8 col-md-7 col-lg-3 aboutme__images">
                <div class="aboutme__images__face">
                    <img src="images/assets/imgprofile.svg" alt="profile photo" />
                    <img src="images/assets/frame.svg" alt="frame botton" />
                </div>
            </div>
            <div class="col col-11 col-lg-5 aboutme__text">
                <p>{info.description}</p>
                <div class="aboutme__text__tecnologies">
                    { tecnologies.map(tecnology => {
                        if (tecnology.applied) {
                            return (<div>
                                <img src={"/images/tecnologies/"+tecnology.icon} alt="tecnology icon" />
                                <span>{tecnology.name}</span>
                            </div>)
                        }
                    }) }
                </div>
            </div>
        </div>
    </article>
</section>